@page
@using System.Security.Claims
@model MedicalSuiteWeb.Pages.Prescriptions.EditPrescriptionModel
@{
    ViewData["Title"] = "Edit Prescription";
    Layout = "_Layout";
}
@{
    if (HttpContext.User.FindFirstValue(ClaimTypes.Role) != null)
    {
        Layout = LayoutAuthorizer.GetLayoutFromRole(this.HttpContext);
    }
    else
    {
        Layout = "_Layout";
    }
}

<h1>Edit Prescription</h1>

<form method="post" class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-3">
            <label asp-for="EditedPrescription.PrescriptionName" class="form-label">Name</label>
        </div>
        <div class="col-md-9">
            <input type="text" class="form-control" asp-for="EditedPrescription.PrescriptionName" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-3">
            <label asp-for="EditedPrescription.PrescriptionStrength" class="form-label">Strength</label>
        </div>
        <div class="col-md-9">
            <input type="text" class="form-control" asp-for="EditedPrescription.PrescriptionStrength" />
        </div>
    </div>
    <!-- Add other fields as needed -->
    <div class="row mb-3">
        <div class="col-md-3">
            <label asp-for="EditedPrescription.PrescriptionQuantity" class="form-label">Quantity</label>
        </div>
        <div class="col-md-9">
            <input type="text" class="form-control" asp-for="EditedPrescription.PrescriptionQuantity" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-3">
            <label asp-for="EditedPrescription.PrescriptionDirections" class="form-label">Directions</label>
        </div>
        <div class="col-md-9">
            <input type="text" class="form-control" asp-for="EditedPrescription.PrescriptionDirections" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-3">
            <label asp-for="EditedPrescription.WrittenDate" class="form-label">Written Date</label>
        </div>
        <div class="col-md-9">
            <input type="date" class="form-control" asp-for="EditedPrescription.WrittenDate" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-3">
            <label asp-for="EditedPrescription.ExpirationDate" class="form-label">Expiration Date</label>
        </div>
        <div class="col-md-9">
            <input type="date" class="form-control" asp-for="EditedPrescription.ExpirationDate" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-3">
            <label asp-for="EditedPrescription.Notes" class="form-label">Notes</label>
        </div>
        <div class="col-md-9">
            <textarea class="form-control" asp-for="EditedPrescription.Notes"></textarea>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-3">
            <label asp-for="EditedPrescription.CategoryId" class="form-label">Patient</label>
        </div>
        <div class="col-md-9">
            <select class="form-control" asp-for="EditedPrescription.CategoryId" asp-items="@Model.People"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </div>
</form>
