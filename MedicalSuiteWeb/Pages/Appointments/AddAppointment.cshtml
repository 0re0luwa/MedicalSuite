@page
@model MedicalSuiteWeb.Pages.Appointments.AddAppointmentModel
@using System.Security.Claims
@{
    if (HttpContext.User.FindFirstValue(ClaimTypes.Role) != null)
    {
        Layout = LayoutAuthorizer.GetLayoutFromRole(this.HttpContext);
    }
    else
    {
        Layout = "_Layout";
    }
 }
<form method="post" class="form-group">
    <div class="container mt-5">
        <h1>Appointments</h1>
        <p>Welcome to the appointments page. Here you can view and manage your upcoming appointments.</p>
        <div class="row mt-4">
            <div class="col-md-6">
                <h2>Schedule a New Appointment</h2>
                <div class="mb-3">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" class="form-control" asp-for="newAppointment.AppointmentDate" id="AppointmentDate" required value="@DateTime.Now">
                </div>
                <div class="mb-3">
                    <label for="time" class="form-label">Time</label>
                    <input type="time" class="form-control" asp-for="newAppointment.AppointmentTime" id="AppointmentTime" required>
                </div>
                <div class="mb-3">
                    <label for="notes" class="form-label">Notes</label>
                    <textarea class="form-control" id="notes" asp-for="newAppointment.AppointmentNotes" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <label for="doctor" class="form-label">DoctorsName</label>
                    <input type="text" class="form-control" asp-for="newAppointment.DoctorsName" id="DoctorsName" required>
                </div>
                <button type="submit" class="btn btn-primary">Schedule Appointment</button>
            </div>
        </div>
    </div>
</form>